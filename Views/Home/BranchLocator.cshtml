@{
    ViewData["Title"] = "Branch Locator Page";
}

<!-- Page Conttent -->
<main class="page-content">

    <div class="container mt-3 mb-5">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4">Branch Locator</h2>
            <hr />
            <p class="text-center mb-4">
                Find your nearest FG branches. Just enter your District and City.
            </p>

            <!-- Search Form -->
            <div id="branchSearchForm" class="row g-3 mb-3">
                <div class="col-md-6">
                    <label for="district" class="form-label">District</label>
                    <input type="text" id="district" name="district" class="insurencebox-form" placeholder="Enter District" required />
                </div>

                <div class="col-md-6">
                    <label for="city" class="form-label">City</label>
                    <input type="text" id="city" name="city" class="insurencebox-form" placeholder="Enter City" required />
                </div>

                <div class="contact-submit-btn text-center">
                    <button type="submit" class="in-button">Search Branch</button>
                </div>
            </div>

            <div style="width: 100%">
                <iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                        src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=synergy+interface+ltd,%20Dhaka,%20Bangladesh&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
                </iframe>
            </div>
        </div>
    </div>

    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
</main>
    <!-- Premium Calculator Modal -->
    <div class="modal fade" id="premiumCalculatorModal" tabindex="-1" aria-labelledby="premiumCalculatorLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title" id="premiumCalculatorLabel">Calculate Your Premium</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="policyType" class="form-label">Select User Plan</label>
                                    <select class="insurencebox-form" id="policyType">
                                        <option value="">Select Type</option>
                                        <option value="life">Shanta DPS (with profit) Plan</option>
                                        <option value="health">Shanta Endowment (With Profit) Plan</option>
                                        <option value="auto">Shanta Child Education Security Plan</option>
                                        <option value="auto">Shanta Three Payment Single Premium (With Profit) Plan</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="age" class="form-label mt-3">Age</label>
                                    <input type="number" class="form-control" id="age">
                                </div>
                                <div class="mb-3">
                                    <label for="policyTerm" class="form-label">Select Term</label>
                                    <select class="insurencebox-form" id="policyTerm">
                                        <option value="">Select Term</option>
                                        <option value="10">10</option>
                                        <option value="11">11</option>
                                        <option value="12">12</option>
                                        <option value="13">13</option>
                                        <option value="14">14</option>
                                        <option value="15">15</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="paymentFrequency" class="form-label mt-3">Pay Mode</label>
                                    <select class="insurencebox-form" id="paymentFrequency">
                                        <option value="">Select</option>
                                        <option value="monthly">Monthly</option>
                                        <option value="quarterly">Quarterly</option>
                                        <option value="half-yearly">Half Yearly</option>
                                        <option value="yearly">Yearly</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="DOB" class="form-label">DOB</label>
                                    <input type="date" class="form-control" id="DOB">
                                </div>
                                <div class="mb-3">
                                    <label for="sumAssuredAmount" class="form-label">Sum Assured Amount</label>
                                    <input type="number" class="form-control" id="sumAssuredAmount">
                                </div>
                                <div class="mb-3">
                                    <label for="premium" class="form-label">Premium</label>
                                    <input type="text" class="form-control" id="premium">
                                </div>
                                <div class="mb-3">
                                    <label for="basicAmount" class="form-label">Basic Premium</label>
                                    <input type="number" class="form-control" id="basicAmount">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="in-button in-button-xs" onclick="showSuccessAlert()">Calculate</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showSuccessAlert() {
            Swal.fire({
                title: "Calculation Successful!",
                text: "Your Calculation has been successfully submitted.",
                icon: "success",
                confirmButtonText: "OK"
            }).then((result) => {
                if (result.isConfirmed) {
                    // Find the modal and simulate the close button click to dismiss the modal
                    var modal = document.getElementById('calculationModal');
                    var closeButton = modal.querySelector('[data-bs-dismiss="modal"]');
                    if (closeButton) {
                        closeButton.click();
                    }
                }
            });
        }
    </script>

    <script src="~/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/assets/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>

    <script>
         window.addEventListener("scroll", function () {
            var header = document.querySelector(".header-bottomarea");
            if (window.scrollY > 50) {
                header.classList.add("fixed-nav");
            } else {
                header.classList.remove("fixed-nav");
            }
        });
    </script>

    @RenderSection("script", required: false)
</body>
</html>